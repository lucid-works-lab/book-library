pipeline {
    agent {
        docker { image 'node:7-alpine' }
    }
    stages {
        stage("Build") {
            steps {
                println "Build"
                sh 'node --version'
            }
        }
        stage("Detekt") {
            steps {
                println "Detekt"
            }
        }
        stage("Test") {
            steps {
                println "Test"
            }
        }
    }
}
