pipeline {
    agent {
        docker { image 'openjdk' }
    }
    stages {
        stage("Build") {
            steps {
                println "Build"
                sh(script: './gradlew build')
            }
        }
        stage("Detekt") {
            steps {
                println "Detekt"
            }
        }
        stage("Test") {
            steps {
                println "Test"
            }
        }
    }
}
